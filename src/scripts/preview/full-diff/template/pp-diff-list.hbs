                <h3>file icons</h3>
                {{#each theme.files as |file|}}
                  <div class='icon-instance'>
                    <div class='name'>{{plusone @index}}. {{file.name}}</div>
                    <img src='{{file.localPath}}' class='icon local' />
                  </div>
