          {{#if theme.hasFolders}}
            <section>
              <h3>folder icons</h3>
              {{#each theme.folders as |folder|}}
                <div class='icon-instance'>
                  <div class='name'>{{plusone @index}}. {{folder.name}}</div>
                  <img src='{{folder.localPath}}' class='icon local' />
                </div>
